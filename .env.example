# Application Info
APP_NAME=IdentiFi
APP_VERSION=1.0.0

# Blockchain / Hardhat
ALCHEMY_API_URL=https://eth-sepolia.g.alchemy.com/v2/<YOUR_ALCHEMY_KEY>
PRIVATE_KEY=0x<YOUR_WALLET_PRIVATE_KEY>           # For deployment only
ETHERSCAN_API_KEY=<YOUR_ETHERSCAN_API_KEY>
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
SEPOLIA_PRIVATE_KEY=your_test_wallet_private_key_here

# IPFS Infura
IPFS_PROJECT_ID=<YOUR_IPFS_PROJECT_ID>
IPFS_PROJECT_SECRET=<YOUR_IPFS_PROJECT_SECRET>
IPFS_GATEWAY=https://ipfs.infura.io:5001/api/v0

# Backend Server
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Cryptographic Secrets
ENCRYPTION_SECRET=<RANDOM_32_BYTE_HEX>             # For AES-GCM encryption
JWT_SECRET=<RANDOM_JWT_SECRET>                     # For API session tokens (optional)

# Email
EMAIL_SERVICE=gmail
EMAIL_USER=<YOUR_EMAIL>
EMAIL_PASS=<APP_PASSWORD>                          # Use app password if Gmail
RECOVERY_NOTIFICATION_TEMPLATE=./templates/recovery.html

# Frontend
NEXT_PUBLIC_ALCHEMY_API_URL=$ALCHEMY_API_URL
NEXT_PUBLIC_CHAIN_ID=11155111                      # Sepolia Testnet
NEXT_PUBLIC_IPFS_GATEWAY=$IPFS_GATEWAY
NEXT_PUBLIC_PROJECT_NAME=SovrID
NEXT_PUBLIC_WEBSITE_URL=http://localhost:3000

# Smart Contract Metadata
DID_REGISTRY_ADDRESS=<DEPLOYED_DID_CONTRACT_ADDR>
ACCESS_CONTROL_ADDRESS=<DEPLOYED_ACCESS_CONTROL_ADDR>
RECOVERY_CONTRACT_ADDRESS=<DEPLOYED_RECOVERY_CONTRACT_ADDR>

# Database
MONGODB_URI=mongodb://localhost:27017/
DB_NAME=identiFiDB